# Server Configuration
# Requirement: 2.2.1 Core Components/API Gateway - Kong Gateway configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
# Requirement: 5.2 Data Security/5.2.1 Encryption Standards - Database security
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=founditure
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# Authentication Configuration
# Requirement: 5.1 SECURITY CONSIDERATIONS/5.1 AUTHENTICATION AND AUTHORIZATION
JWT_SECRET=your_jwt_secret
JWT_EXPIRY=3600
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRY=604800

# Firebase Configuration
# Requirement: 5.1 SECURITY CONSIDERATIONS/5.1 AUTHENTICATION AND AUTHORIZATION
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_DATABASE_URL=your_firebase_database_url

# AWS Configuration
# Requirement: 5.2 Data Security/5.2.1 Encryption Standards
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=founditure-uploads

# Service URLs
# Requirement: 2.2.1 Core Components/API Gateway
AUTH_SERVICE_URL=http://localhost:3001
LISTING_SERVICE_URL=http://localhost:3002
MESSAGING_SERVICE_URL=http://localhost:3003
LOCATION_SERVICE_URL=http://localhost:3004
AI_SERVICE_URL=http://localhost:3005

# Redis Configuration
# Requirement: 2.2.1 Core Components/API Gateway - Caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Security Configuration
# Requirement: 5.2 Data Security/5.2.1 Encryption Standards
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
# Requirement: 2.2.1 Core Components/API Gateway - CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# MongoDB Configuration (Auth Service)
# Requirement: 5.2 Data Security/5.2.1 Encryption Standards
DB_URL=mongodb://localhost:27017/founditure